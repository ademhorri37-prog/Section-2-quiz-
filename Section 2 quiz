  <script>
    const defaultConfig = {
      quiz_title: "Section 2 Quiz",
      welcome_message: "Answer these questions about Section 2!",
      perfect_score_message: "Amazing! You got everything right!",
      background_color: "#667eea",
      surface_color: "#f8f9ff",
      text_color: "#333333",
      primary_action_color: "#667eea",
      secondary_action_color: "#764ba2"
    };

    const questions = [
      {
        question: "Est-ce que 3ejbatek ST?",
        answers: ["Oui", "Non"],
        correct: null
      },
      {
        question: "Est-ce que Section 2 mliha?",
        answers: ["Oui", "Non"],
        correct: null
      },
      {
        question: "Est-ce qu'on bedlo d√©l√©gu√©?",
        answers: ["Oui", "Non"],
        correct: null
      },
      {
        question: "3la 9dach yr9d Rayan Bouazabiya?",
        answers: ["20:00 PM", "22:00 PM"],
        correct: null
      },
      {
        question: "Est-ce que Cheikh ta3 Analysis ta3 l cour mlih?",
        answers: ["Oui", "Non"],
        correct: null
      },
      {
        question: "T9der tkhrej m site mnfdlk?",
        answers: ["Oui", "Non"],
        correct: null
      },
      {
        question: "3lach mzl mkhrejt?",
        answers: ["Oui", "Non"],
        correct: null
      },
      {
        question: "Est-ce que Rayan ysken f Hydra?",
        answers: ["Oui", "Non"],
        correct: null
      },
      {
        question: "3ejbek site?",
        answers: ["Oui", "Non"],
        correct: null
      },
      {
        question: "T9der troh tr9od?",
        answers: ["Oui", "Non"],
        correct: null
      }
    ];

    let currentQuestion = 0;
    let score = 0;
    let userAnswers = [];

    const startScreen = document.getElementById('startScreen');
    const quizSection = document.getElementById('quizSection');
    const resultsSection = document.getElementById('resultsSection');
    const startBtn = document.getElementById('startBtn');
    const questionContainer = document.getElementById('questionContainer');
    const scoreDisplay = document.getElementById('scoreDisplay');
    const progressFill = document.getElementById('progressFill');
    const finalScore = document.getElementById('finalScore');
    const percentage = document.getElementById('percentage');
    const resultText = document.getElementById('resultText');
    const resultEmoji = document.getElementById('resultEmoji');
    const playAgainBtn = document.getElementById('playAgainBtn');

    startBtn.addEventListener('click', startQuiz);
    playAgainBtn.addEventListener('click', resetQuiz);

    function startQuiz() {
      startScreen.style.display = 'none';
      quizSection.classList.add('active');
      showQuestion();
    }

    function showQuestion() {
      if (currentQuestion >= questions.length) {
        showResults();
        return;
      }

      const progress = ((currentQuestion) / questions.length) * 100;
      progressFill.style.width = progress + '%';

      const q = questions[currentQuestion];
      questionContainer.innerHTML = `
        <div class="question-card">
          <div class="question-number">Question ${currentQuestion + 1} of ${questions.length}</div>
          <div class="question-text">${q.question}</div>
          <div class="answers">
            ${q.answers.map((answer, index) => `
              <button class="answer-btn" data-index="${index}">${answer}</button>
            `).join('')}
          </div>
        </div>
      `;

      document.querySelectorAll('.answer-btn').forEach(btn => {
        btn.addEventListener('click', handleAnswer);
      });
    }

    function handleAnswer(e) {
      const selectedIndex = parseInt(e.target.dataset.index);
      const allButtons = document.querySelectorAll('.answer-btn');

      allButtons.forEach(btn => {
        btn.disabled = true;
      });

      userAnswers.push(selectedIndex);
      e.target.classList.add('correct');

      setTimeout(() => {
        currentQuestion++;
        showQuestion();
      }, 800);
    }

    function showResults() {
      progressFill.style.width = '100%';
      quizSection.classList.remove('active');
      resultsSection.classList.add('active');
      
      const totalQuestions = questions.length;
      finalScore.textContent = `${totalQuestions}/${totalQuestions}`;
      percentage.textContent = '100%';

      const perfectMessage = window.elementSdk?.config?.perfect_score_message || defaultConfig.perfect_score_message;

      resultEmoji.textContent = 'üéâ';
      resultText.textContent = 'Merci d\'avoir r√©pondu √† toutes les questions!';
    }

    function resetQuiz() {
      currentQuestion = 0;
      score = 0;
      userAnswers = [];
      scoreDisplay.textContent = '0';
      progressFill.style.width = '0%';
      resultsSection.classList.remove('active');
      startScreen.style.display = 'block';
    }

    async function onConfigChange(config) {
      const quizTitle = document.getElementById('quizTitle');
      const welcomeMessage = document.getElementById('welcomeMessage');

      quizTitle.textContent = config.quiz_title || defaultConfig.quiz_title;
      welcomeMessage.textContent = config.welcome_message || defaultConfig.welcome_message;

      const backgroundColor = config.background_color || defaultConfig.background_color;
      const surfaceColor = config.surface_color || defaultConfig.surface_color;
      const textColor = config.text_color || defaultConfig.text_color;
      const primaryActionColor = config.primary_action_color || defaultConfig.primary_action_color;
      const secondaryActionColor = config.secondary_action_color || defaultConfig.secondary_action_color;

      document.body.style.background = `linear-gradient(135deg, ${backgroundColor} 0%, ${secondaryActionColor} 100%)`;
      
      document.querySelectorAll('.question-card, .score-display').forEach(el => {
        el.style.background = surfaceColor;
      });

      document.querySelectorAll('.question-text, .result-text, h2').forEach(el => {
        el.style.color = textColor;
      });

      document.querySelectorAll('.start-button, .play-again-btn').forEach(el => {
        el.style.background = primaryActionColor;
      });

      quizTitle.style.color = primaryActionColor;
      document.querySelector('.score-display').style.color = primaryActionColor;
      document.querySelector('.final-score').style.color = primaryActionColor;
      document.querySelector('.question-number').style.color = primaryActionColor;
      
      const progressFillEl = document.getElementById('progressFill');
      progressFillEl.style.background = `linear-gradient(90deg, ${backgroundColor}, ${secondaryActionColor})`;
    }

    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities: (config) => ({
          recolorables: [
            {
              get: () => config.background_color || defaultConfig.background_color,
              set: (value) => {
                config.background_color = value;
                window.elementSdk.setConfig({ background_color: value });
              }
            },
            {
              get: () => config.surface_color || defaultConfig.surface_color,
              set: (value) => {
                config.surface_color = value;
                window.elementSdk.setConfig({ surface_color: value });
              }
            },
            {
              get: () => config.text_color || defaultConfig.text_color,
              set: (value) => {
                config.text_color = value;
                window.elementSdk.setConfig({ text_color: value });
              }
            },
            {
              get: () => config.primary_action_color || defaultConfig.primary_action_color,
              set: (value) => {
                config.primary_action_color = value;
                window.elementSdk.setConfig({ primary_action_color: value });
              }
            },
            {
              get: () => config.secondary_action_color || defaultConfig.secondary_action_color,
              set: (value) => {
                config.secondary_action_color = value;
                window.elementSdk.setConfig({ secondary_action_color: value });
              }
            }
          ],
          borderables: [],
          fontEditable: undefined,
          fontSizeable: undefined
        }),
        mapToEditPanelValues: (config) => new Map([
          ["quiz_title", config.quiz_title || defaultConfig.quiz_title],
          ["welcome_message", config.welcome_message || defaultConfig.welcome_message],
          ["perfect_score_message", config.perfect_score_message || defaultConfig.perfect_score_message]
        ])
      });
    }
  </script>
